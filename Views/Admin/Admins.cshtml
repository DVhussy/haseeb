@model List<MvcApplication5.Models.Admin>
@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    int i = 1;
}
<div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-3">
        <ul>
            <li role="presentation"><input id="searchTitle" class="form-control" type="search" placeholder="Enter Title" style="margin-left:100px;" /></li>
        </ul>
        <br />
        <br />
    </div>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h1 class="text-success">Users List</h1>
        <table class="table table-bordered" id="myTable">
            <tr class="active">
                <td width="5%">#</td>
                <td width="50%">Name</td>
                <td width="20%"> Options</td>
            </tr>

            @foreach (var v in Model)
            {
                <tr>
                    <td>@i</td>
                    <td class="text-primary">@v.Name</td>
                    <td>
                        <a href="/Admin/EditAdmin/@v.Id">Edit</a>
                        <a href="/Admin/DeleteAdmin/@v.Id">Delete</a>
                    </td>
                </tr>
                i = i + 1;
            }
        </table>
    </div>
</div>
